<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <resource-bundle>
            <base-name>org.foi.nwtis.vlspoljar.i18n</base-name>
            <var>i18n</var>
        </resource-bundle>
        
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>      
    </application>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/javniDio.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>prijava</from-outcome>
            <to-view-id>/prijava.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registracija</from-outcome>
            <to-view-id>/registracija.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>rangLista</from-outcome>
            <to-view-id>/rangLista.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/javniDio.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/prijava.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>prijava</from-outcome>
            <to-view-id>/prijava.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registracija</from-outcome>
            <to-view-id>/registracija.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>javniDio</from-outcome>
            <to-view-id>/javniDio.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/odabirPortfelja.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>noviPortfelj</from-outcome>
            <to-view-id>/noviPortfelj.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registracija.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/noviPortfelj.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>odabirPortfelja</from-outcome>
            <to-view-id>/odabirPortfelja.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/privatniDio.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>noviPortfelj</from-outcome>
            <to-view-id>/noviPortfelj.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>odabirPortfelja</from-outcome>
            <to-view-id>/odabirPortfelja.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/rangLista.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>javniDio</from-outcome>
            <to-view-id>/javniDio.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>prijava</from-outcome>
            <to-view-id>/prijava.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registracija</from-outcome>
            <to-view-id>/registracija.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/adminDio.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>prijava</from-outcome>
            <to-view-id>/prijava.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registracija</from-outcome>
            <to-view-id>/registracija.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledAdminDio.odaberiMapu()}</from-action>
            <from-outcome>promjenaMape</from-outcome>
            <to-view-id>/adminDio.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
